rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{document} {
      allow create: if request.auth.uid == document;
      allow read: if true;
      allow write: if request.auth.uid == document;
      allow delete: if false;
    }

    match /appointments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /targets/{document} {
      allow create: if request.resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /targets/{parent}/nutrient/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if get(/databases/$(database)/documents/targets/$(parent)).data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /{path=**}/nutrient/{document} {
      allow read: if true;
    }


    match /targets/{parent}/vital/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if get(/databases/$(database)/documents/targets/$(parent)).data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /{path=**}/vital/{document} {
      allow read: if true;
    }


    match /targets/{parent}/labtest/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if get(/databases/$(database)/documents/targets/$(parent)).data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /{path=**}/labtest/{document} {
      allow read: if true;
    }


    match /meals/{document} {
      allow create: if request.resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /fluids/{document} {
      allow create: if request.resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /labtestResults/{document} {
      allow create: if request.resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /vitalsResult/{document} {
      allow create: if request.resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow read: if true;
      allow write: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /labTestPhoto/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /customMeal/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /chats/{document} {
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) in request.resource.data.users;
      allow read: if true;
      allow write: if true;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) in get(request.resource.data.chat).data.users
&& /databases/$(database)/documents/users/$(request.auth.uid) == request.resource.data.user;
      allow read: if true;
      allow write: if true;
      allow delete: if false;
    }

    match /videos/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /video_comments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /doctors/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.user_ref == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /medication/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if true;
    }

    match /chatGPTHistory/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /medicationRemind/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /posts/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /post_comments/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /post_comments/{parent}/post_comment_reply/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /{path=**}/post_comment_reply/{document} {
      allow read: if true;
    }


    match /video_comments/{parent}/video_comment_reply/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if true;
      allow delete: if resource.data.userRef == /databases/$(database)/documents/users/$(request.auth.uid);
    }

    match /{path=**}/video_comment_reply/{document} {
      allow read: if true;
    }


    match /ff_user_push_notifications/{id} {
      allow read, update, delete: if false;
      allow create: if /databases/$(database)/documents/users/$(request.auth.uid) == request.resource.data.sender;
    }
  }
}
